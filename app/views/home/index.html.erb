<div class="container mt-5 text-center">
  <h1>AppIdea CEU Tracker</h1>

  <% if current_user %>
    <div class="alert alert-success mt-4">
      Welcome back, <strong><%= current_user.email %></strong>!
    </div>
    <%= button_to "Log Out", logout_path, method: :delete, class: "btn btn-danger" %>
  <% else %>
    <p class="lead mt-3">Please log in to manage your CEUs.</p>
    <%= link_to "Log In", login_path, class: "btn btn-primary btn-lg" %>
  <% end %>
</div>