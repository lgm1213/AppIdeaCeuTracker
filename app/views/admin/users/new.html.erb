<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
          <h4 class="mb-0">Create New User</h4>
        </div>
        <div class="card-body">
          <%= form_with model: [:admin, @user], local: true do |f| %>
            
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <!-- Changed :email_address to :email to match typical User model -->
              <%= f.label :email_address, "Email address", class: "form-label fw-bold" %>
              <%= f.email_field :email_address, class: "form-control", placeholder: "user@example.com", autofocus: true %>
            </div>

            <div class="row g-2 mb-3">
              <div class="col-md-6">
                <%= f.label :password, "Temporary Password", class: "form-label fw-bold" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="col-md-6">
                <%= f.label :password_confirmation, "Confirm Password", class: "form-label fw-bold" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
              <div class="form-text">The user can change this later in their Account Settings.</div>
            </div>

            <!-- Styled Admin Block: Centered vertically/horizontally with ~20% padding -->
            <div class="mb-4 bg-light rounded border d-flex align-items-center" style="padding: 1.5rem 20%;">
              <div class="form-check">
                <%= f.check_box :admin, class: "form-check-input" %>
                <%= f.label :admin, "Administrator Privileges", class: "form-check-label fw-bold" %>
                <div class="form-text text-danger mt-1">
                  <i class="bi bi-shield-lock-fill me-1"></i>
                  Admins have full access to manage content and users.
                </div>
              </div>
            </div>

            <div class="d-flex justify-content-end gap-2 border-top pt-3">
              <%= link_to "Cancel", admin_users_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "Create User", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
