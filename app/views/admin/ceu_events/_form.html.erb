<%= form_with(model: [:admin, event], local: true) do |f| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-3">
    <div class="col-md-8">
      <%= f.label :title, class: "form-label fw-bold" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :provider, class: "form-label fw-bold" %>
      <%= f.text_field :provider, class: "form-control" %>
    </div>

    <div class="col-md-3">
      <%= f.label :event_type, "Type", class: "form-label fw-bold" %>
      <%= f.select :event_type, ["Online", "In-Person", "Conference", "Webinar", "Seminar"], {}, class: "form-select" %>
    </div>
    <div class="col-md-3">
      <%= f.label :category, class: "form-label fw-bold" %>
      <%= f.text_field :category, class: "form-control", placeholder: "e.g. Nursing" %>
    </div>
    <div class="col-md-2">
      <%= f.label :credits, class: "form-label fw-bold" %>
      <%= f.number_field :credits, step: 0.5, class: "form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :date, "Date & Time", class: "form-label fw-bold" %>
      <%= f.datetime_field :date, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= f.label :location, class: "form-label fw-bold" %>
      <%= f.text_field :location, class: "form-control", placeholder: "City, State or 'Remote'" %>
    </div>
    <div class="col-md-6">
      <%= f.label :url, "Registration URL", class: "form-label fw-bold" %>
      <%= f.url_field :url, class: "form-control", placeholder: "https://..." %>
    </div>

    <div class="col-12">
      <%= f.label :description, class: "form-label fw-bold" %>
      <%= f.text_area :description, rows: 4, class: "form-control" %>
    </div>

    <div class="col-12 mt-4 d-flex justify-content-end gap-2">
      <%= link_to "Cancel", admin_ceu_events_path, class: "btn btn-outline-secondary" %>
      <%= f.submit class: "btn btn-primary px-4" %>
    </div>
  </div>
<% end %>