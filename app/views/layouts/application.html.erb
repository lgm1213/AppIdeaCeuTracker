<!DOCTYPE html>
<html>
  <head>
    <title>App Idea Ceu Tracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light d-flex flex-column min-vh-100">
    
    <!-- Navbar: This will now appear on EVERY page (Dashboard, Search, Admin, etc.) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">
          <i class="bi bi-mortarboard-fill me-2"></i>App Idea CEU Tracker
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <% if current_user %>
              
              <!-- ADMIN LINK: Only visible if user.admin is true -->
              <% if current_user.try(:admin?) %>
                <li class="nav-item">
                  <%= link_to "Admin Portal", admin_ceu_events_path, class: "nav-link fw-bold text-warning" %>
                </li>
              <% end %>

              <li class="nav-item">
                <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "My Profile", profile_path, class: "nav-link" %>
              </li>
              <li class="nav-item ms-lg-3">
                <%= button_to "Log Out", logout_path, method: :delete, class: "btn btn-outline-light btn-sm" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Log In", login_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", signup_path, class: "btn btn-primary btn-sm ms-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
      <div class="container">
        <!-- Flash Messages -->
        <% flash.each do |type, message| %>
          <% 
             alert_class = case type.to_s
               when 'notice' then 'alert-success'
               when 'alert' then 'alert-danger'
               when 'error' then 'alert-danger'
               else 'alert-info'
             end
          %>
          <div class="alert <%= alert_class %> alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>

        <!-- This is where your specific view content (Dashboard, Profile, etc.) gets injected -->
        <%= yield %>
      </div>
    </main>
    
    <!-- Footer -->
    <footer class="bg-white py-4 mt-auto border-top">
      <div class="container text-center text-muted small">
        &copy; <%= Time.current.year %> App Idea CEU Tracker. All rights reserved.
      </div>
    </footer>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>