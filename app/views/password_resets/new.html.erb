<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <h3 class="mb-3 fw-bold">Forgot Password?</h3>
          <p class="text-muted mb-4">Enter your email address and we'll send you a link to reset your password.</p>

          <%= form_with url: password_resets_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :email_address, class: "form-label" %>
              <%= f.email_field :email_address, class: "form-control", placeholder: "name@example.com", required: true %>
            </div>

            <%= f.submit "Send Reset Link", class: "btn btn-primary w-100" %>
          <% end %>
          
          <div class="mt-3 text-center">
            <%= link_to "Back to Log In", login_path, class: "text-decoration-none small" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>