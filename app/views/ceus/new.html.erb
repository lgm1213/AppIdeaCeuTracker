<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h3 class="mb-4">Log Continuing Education</h3>

          <%= form_with model: @ceu, local: true do |f| %>
            
            <% if @ceu.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @ceu.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :title, "Course / Activity Title", class: "form-label" %>
              <%= f.text_field :title, class: "form-control", placeholder: "e.g. Advanced Cardiac Life Support" %>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :date, "Date Completed", class: "form-label" %>
                <%= f.date_field :date, class: "form-control" %>
              </div>
              <div class="col-md-6 mb-3">
                <%= f.label :duration, "Credits / Hours", class: "form-label" %>
                <%= f.number_field :duration, step: 0.5, class: "form-control", placeholder: "1.0" %>
              </div>
            </div>

            <!-- Certificate Upload Field -->
            <div class="mb-4">
              <%= f.label :certificate, "Upload Certificate (PDF or Image)", class: "form-label" %>
              <%= f.file_field :certificate, class: "form-control" %>
              <div class="form-text">Optional. Max size 5MB.</div>
            </div>

            <div class="d-flex gap-2 mt-3">
              <%= f.submit "Save CEU", class: "btn btn-primary" %>
              <%= link_to "Cancel", dashboard_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>