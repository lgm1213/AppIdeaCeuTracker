<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      
      <!-- Settings Card -->
      <div class="card shadow-sm mb-5">
        <div class="card-header bg-white py-3">
          <h4 class="mb-0">Account Settings</h4>
        </div>
        
        <div class="card-body">
          <%= form_with model: @user, url: account_path, method: :patch, local: true do |f| %>
            
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0 ps-3">
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <h6 class="text-uppercase text-muted small fw-bold mb-3">Login Details</h6>
            
            <div class="mb-3">
              <%= f.label :email_address, "Email Address", class: "form-label" %>
              <%= f.email_field :email_address, class: "form-control" %>
            </div>

            <hr class="my-4">

            <h6 class="text-uppercase text-muted small fw-bold mb-3">Change Password</h6>
            <p class="text-muted small">Leave these blank if you don't want to change your password.</p>

            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <%= f.label :password, "New Password", class: "form-label" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="col-md-6">
                <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>

            <hr class="my-4">

            <div class="bg-light p-3 rounded mb-4 border">
              <label class="form-label fw-bold">Current Password</label>
              <div class="form-text mb-2">We need your current password to confirm these changes.</div>
              <%= f.password_field :current_password, class: "form-control", required: true %>
            </div>

            <div class="d-flex justify-content-end gap-2">
              <%= link_to "Cancel", dashboard_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "Save Changes", class: "btn btn-primary" %>
            </div>
            
          <% end %>
        </div>
      </div>

      <!-- Danger Zone -->
      <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white py-3">
          <h5 class="mb-0 fs-6 fw-bold">Danger Zone</h5>
        </div>
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <h6 class="fw-bold mb-1">Delete Account</h6>
            <p class="text-muted small mb-0">Once you delete your account, there is no going back. Please be certain.</p>
          </div>
          <%= button_to "Delete Account", account_path, method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure? This will delete all your data permanently." } %>
        </div>
      </div>

    </div>
  </div>
</div>